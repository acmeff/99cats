<h1><%=@cat.name%></h1>

<table frame="border">
  <tr>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
    <th>Birth Date</th>
  <tr>

    <td><%=@cat.color%></td>
    <td><%=@cat.sex%></td>
    <td><%=@cat.description%></td>
    <td><%=@cat.birth_date%></td>
  </tr>

</table>


<h2>Rental Requests</h2>
<table frame="border">
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Approve</th>
    <th>Deny</th>

  </tr>


    <%@cat.cat_rental_requests.each do |cat_rental_request|%>
      <tr>
        <td><%=cat_rental_request.start_date%></td>
        <td><%=cat_rental_request.end_date%></td>
        <td><%=cat_rental_request.status%></td>
        <% if cat_rental_request.status == 'PENDING'%>
          <td><%= button_to 'Approve Rental', approve_url(cat_rental_request), method: :patch %></td>
          <td><%= button_to 'Deny Rental', deny_url(cat_rental_request), method: :patch %></td>
        <% end %>

      </tr>
    <% end %>

</table>
